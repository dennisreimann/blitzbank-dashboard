{
  "private": true,
  "name": "@blitzbank/dashboard",
  "description": "LND Node Dashboard",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "author": "Dennis Reimann",
  "scripts": {
    "start": "rimraf assets dist && npm-run-all --parallel start:dev:*",
    "start:dev:ui": "vue-cli-service serve",
    "start:dev:server": "cross-env NODE_ENV=development nodemon -r dotenv/config $npm_package_main",
    "start:prod": "cross-env NODE_ENV=production node -r dotenv/config $npm_package_main",
    "build": "vue-cli-service build",
    "ln-check": "node src/index.js",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "@radar/lnrpc": "^0.5.1-beta",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "connect-history-api-fallback": "1.6.0",
    "cross-env": "5.2.0",
    "dotenv": "^6.2.0",
    "express": "4.16.4",
    "express-basic-auth": "^1.1.6",
    "ln-service": "34.2.1",
    "morgan": "^1.9.1",
    "npm-run-all": "4.1.5",
    "register-service-worker": "1.6.1",
    "systeminformation": "^4.0.10",
    "vue": "2.6.6",
    "vue-router": "3.0.2",
    "vuex": "3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@vue/cli-plugin-babel": "3.4.0",
    "@vue/cli-plugin-e2e-cypress": "3.4.0",
    "@vue/cli-plugin-eslint": "3.4.0",
    "@vue/cli-plugin-pwa": "3.4.0",
    "@vue/cli-plugin-unit-jest": "3.4.0",
    "@vue/cli-service": "3.4.0",
    "@vue/eslint-config-standard": "4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "eslint": "5.13.0",
    "eslint-plugin-vue": "5.1.0",
    "lint-staged": "8.1.3",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "vue-template-compiler": "2.6.6",
    "webpack": "^4.29.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "main": "src/server/index.js"
}
