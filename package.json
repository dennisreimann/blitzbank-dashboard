{
  "private": true,
  "name": "@blitzbank/dashboard",
  "description": "LND Node Dashboard",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "author": "Dennis Reimann",
  "config": {
    "server": {
      "port": "4000"
    }
  },
  "scripts": {
    "start": "rimraf assets dist && npm-run-all --parallel start:dev:*",
    "start:dev:ui": "vue-cli-service serve",
    "start:dev:server": "cross-env NODE_ENV=development PORT=$npm_package_config_server_port nodemon $NODE_DEBUG_OPTION ./src/server",
    "start:prod": "cross-env NODE_ENV=production PORT=$npm_package_config_server_port node ./src/server",
    "build": "vue-cli-service build",
    "ln-check": "node src/index.js",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "connect-history-api-fallback": "1.6.0",
    "cross-env": "5.2.0",
    "express": "4.16.4",
    "express-basic-auth": "^1.1.6",
    "ln-service": "33.0.2",
    "npm-run-all": "4.1.5",
    "register-service-worker": "1.5.2",
    "systeminformation": "^3.54.0",
    "vue": "2.5.22",
    "vue-router": "3.0.2",
    "vuex": "3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@vue/cli-plugin-babel": "3.3.0",
    "@vue/cli-plugin-e2e-cypress": "3.3.0",
    "@vue/cli-plugin-eslint": "3.3.0",
    "@vue/cli-plugin-pwa": "3.3.0",
    "@vue/cli-plugin-unit-jest": "3.3.0",
    "@vue/cli-service": "3.3.0",
    "@vue/eslint-config-standard": "4.0.0",
    "@vue/test-utils": "1.0.0-beta.28",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "eslint": "5.12.1",
    "eslint-plugin-vue": "5.1.0",
    "lint-staged": "8.1.0",
    "nodemon": "^1.18.9",
    "rimraf": "^2.6.3",
    "vue-template-compiler": "2.5.22",
    "webpack": "^4.28.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "main": "src/index.js"
}
