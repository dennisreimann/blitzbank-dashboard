{
  "name": "@blitzbank/dashboard",
  "description": "Dashboard for your Bitcoind/LND full node.",
  "version": "0.0.3",
  "license": "MIT",
  "author": "Dennis Reimann <mail@dennisreimann.de> (https://dennisreimann.de)",
  "homepage": "https://github.com/dennisreimann/blitzbank-dashboard",
  "bugs": "https://github.com/dennisreimann/blitzbank-dashboard/issues",
  "repository": "dennisreimann/blitzbank-dashboard",
  "engines": {
    "node": ">=10.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/server/index.js",
  "bin": {
    "blitzbank": "./bin/blitzbank.sh"
  },
  "files": [
    "bin",
    "dist",
    "src/server"
  ],
  "keywords": [
    "bitcoin",
    "lnd",
    "lightning",
    "lightning-network",
    "fullnode",
    "dashboard",
    "admin",
    "blitzbank"
  ],
  "scripts": {
    "start": "rimraf assets dist && nodemon --exec 'vue-cli-service serve'",
    "start:prod": "$npm_package_bin_blitzbank",
    "build": "vue-cli-service build",
    "release": "yarn lint && yarn test && yarn build && yarn publish",
    "lint": "vue-cli-service lint",
    "test": "jest --clearCache && vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "axios": "0.18.0",
    "bitcoin-units": "0.3.0",
    "bitcoind-rpc": "0.7.2",
    "camelize-keys": "1.0.0",
    "clipboard": "2.0.4",
    "connect-history-api-fallback": "1.6.0",
    "cross-env": "5.2.0",
    "date-fns": "1.30.1",
    "deepmerge": "3.2.0",
    "dotenv": "8.0.0",
    "express": "4.16.4",
    "express-basic-auth": "1.2.0",
    "filesize": "4.1.2",
    "ln-service": "36.3.2",
    "morgan": "1.9.1",
    "register-service-worker": "1.6.2",
    "systeminformation": "4.1.6",
    "vue": "2.6.10",
    "vue-native-websocket": "2.0.13",
    "vue-router": "3.0.6",
    "vuex": "3.1.0",
    "ws": "7.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@vue/cli-plugin-babel": "3.7.0",
    "@vue/cli-plugin-e2e-cypress": "3.7.0",
    "@vue/cli-plugin-eslint": "3.7.0",
    "@vue/cli-plugin-pwa": "3.7.0",
    "@vue/cli-plugin-unit-jest": "3.7.0",
    "@vue/cli-service": "3.7.0",
    "@vue/eslint-config-standard": "4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "5.2.2",
    "lint-staged": "8.1.6",
    "nodemon": "1.19.0",
    "rimraf": "2.6.3",
    "standard": "12.0.1",
    "vue-template-compiler": "2.6.10",
    "webpack": "4.30.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
