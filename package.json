{
  "name": "@blitzbank/dashboard",
  "description": "Dashboard for your Bitcoind/LND full node.",
  "version": "0.1.1",
  "license": "MIT",
  "author": "Dennis Reimann <mail@dennisreimann.de> (https://dennisreimann.de)",
  "homepage": "https://github.com/dennisreimann/blitzbank-dashboard",
  "bugs": "https://github.com/dennisreimann/blitzbank-dashboard/issues",
  "repository": "dennisreimann/blitzbank-dashboard",
  "engines": {
    "node": ">=10.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/server/index.js",
  "bin": {
    "blitzbank": "./bin/blitzbank.sh"
  },
  "files": [
    "bin",
    "dist",
    "src/server"
  ],
  "keywords": [
    "bitcoin",
    "lnd",
    "lightning",
    "lightning-network",
    "fullnode",
    "dashboard",
    "admin",
    "blitzbank"
  ],
  "scripts": {
    "cleanup": "rimraf dist",
    "start": "npm run cleanup && nodemon --exec 'vue-cli-service serve'",
    "start:prod": "$npm_package_bin_blitzbank",
    "build": "npm run cleanup && vue-cli-service build",
    "release": "npm run lint && npm test && npm run build && npm run publish",
    "lint": "vue-cli-service lint",
    "test": "jest --clearCache && vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "axios": "0.19.0",
    "bitcoin-units": "0.3.0",
    "bitcoind-rpc": "0.8.1",
    "camelize-keys": "1.0.0",
    "clipboard": "2.0.4",
    "connect-history-api-fallback": "1.6.0",
    "cross-env": "5.2.1",
    "date-fns": "2.1.0",
    "dotenv": "8.1.0",
    "express": "4.17.1",
    "express-session": "1.16.2",
    "filesize": "4.1.2",
    "ln-service": "44.0.3",
    "lndconnect": "0.2.10",
    "morgan": "1.9.1",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "qrcode": "1.4.1",
    "register-service-worker": "1.6.2",
    "systeminformation": "4.14.8",
    "vue": "2.6.10",
    "vue-native-websocket": "2.0.13",
    "vue-router": "3.1.3",
    "vuex": "3.1.1",
    "ws": "7.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@vue/cli-plugin-babel": "3.11.0",
    "@vue/cli-plugin-e2e-cypress": "3.11.0",
    "@vue/cli-plugin-eslint": "3.11.0",
    "@vue/cli-plugin-pwa": "3.11.0",
    "@vue/cli-plugin-unit-jest": "3.11.0",
    "@vue/cli-service": "3.11.0",
    "@vue/eslint-config-standard": "4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "eslint": "6.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-vue": "5.2.3",
    "lint-staged": "9.2.5",
    "nodemon": "1.19.2",
    "rimraf": "3.0.0",
    "standard": "14.1.0",
    "vue-template-compiler": "2.6.10",
    "webpack": "4.39.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
